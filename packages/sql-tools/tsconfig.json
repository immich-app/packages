{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2024",
    "module": "es2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "outDir": "dist",
    "baseUrl": "./",
    "rewriteRelativeImportExtensions": true
  },
  "include": ["src"]
}
